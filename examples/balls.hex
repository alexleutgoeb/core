% define balls
color(b1, red).
color(b2, red).
color(b3, red).
%color(b4, red).
%color(b5, red).
color(b6, green).
color(b7, green).
color(b8, green).
%color(b9, green).
color(b10, blue).
color(b11, blue).
color(b12, blue).
color(b13, blue).

% define boxes
box(x1).
box(x2).
box(x3).

% put each ball into exactly one box
in(B, C, X) v -in(B, C, X) :- color(B, C), box(X).
:- in(B, C, X1), in(B, C, X2), X1 != X2.
inBox(B) :- in(B, C, X).
:- color(B, C), not inBox(B).

inG1(B) :- in(B, green, x1).
inB2(B) :- in(B, blue, x2).
inR3(B) :- in(B, red, x3).
inB1(B) :- in(B, blue, x1).
inR2(B) :- in(B, red, x2).

:- not &numberOfBallsGE[inG1, 2]().
:- not &numberOfBallsGE[inB2, 1]().
:- not &numberOfBallsGE[inR3, 1]().
:- not &numberOfBallsGE[inB1, 2]().
:- not &numberOfBallsGE[inR2, 2]().
